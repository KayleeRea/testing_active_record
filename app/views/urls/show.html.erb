<% if @url.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@url.errors.count, "error") %> prohibited this url from being saved:</h2>

      <ul>
        <% @url.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>

<table>
  <tr>
    <td>Original URL</td>
    <td><%= @url.original_url %></td>
  </tr>
  <tr>
    <td>"Shortened" URL</td>
    <td><%= shortened_url(request, @url) %></td>
  </tr>
</table>

